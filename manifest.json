{
  "name": "Evercuts",
  "version": "1.0",
  "description": "Keyboard shortcuts for the new Evernote UI",
  "permissions": ["activeTab", "declarativeContent"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/evers16.png",
      "32": "images/evers32.png",
      "48": "images/evers48.png",
      "128": "images/evers128.png"
    }
  },
  "icons": {
    "16": "images/evers16.png",
    "32": "images/evers32.png",
    "48": "images/evers48.png",
    "128": "images/evers128.png"
  },
  "commands": {
      "search" : {
          "suggested_key": {
               "default": "Alt+Q"
          },
          "description": "Search notes"
      },
      "fullscreen": {
        "suggested_key": {
            "default": "Alt+P"
        },
        "description": "Toggle fullscreen"
      },
      "opennote": {
        "suggested_key": {
            "default": "Alt+T"
        },
        "description": "Full screen current note in a new tab"
      },
      "deletenote": {
        "suggested_key": {
            "default": "Alt+Delete"
        },
        "description": "delete current note"
      },
      "movenote": {
        "description": "move note to new notebook"
      }
  },
  "content_scripts": [
     {
       "matches": ["https://*.evernote.com/*"],
       "js": ["contentScript.js"]
     }
   ],
  "manifest_version": 2
}